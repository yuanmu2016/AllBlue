<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
            <TextView
                android:id="@+id/text_title"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:gravity="center"
                android:textSize="@dimen/title_size"
                android:textColor="@color/colorForeground"/>
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <LinearLayout
                android:tag="0"
                android:id="@+id/layout_item0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/layout_selector"
                >
                <ImageView
                    android:id="@+id/imageview_item0"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:clickable="false"/>
                <TextView
                    android:id="@+id/textview_item0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:text="租房"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:tag="1"
                android:id="@+id/layout_item1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/layout_selector">
                <ImageView
                    android:id="@+id/imageview_item1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:clickable="false"/>
                <TextView
                    android:id="@+id/textview_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:text="活动"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:tag="2"
                android:id="@+id/layotu_item2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/layout_selector">
                <ImageView
                    android:id="@+id/imageview_item2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:clickable="false"/>
                <TextView
                    android:id="@+id/textview_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:text="工作"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:tag="3"
                android:id="@+id/layout_item3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/layout_selector">
                <ImageView
                    android:id="@+id/imageview_item3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:clickable="false"/>
                <TextView
                    android:id="@+id/textview_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:text="线上"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
 </LinearLayout>


